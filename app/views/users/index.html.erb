<%= render partial: "users/header" %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Manage </th>
    </tr>
  </thaed>

  <tbody>
    <%  current_account.users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to edit_user_path(user) do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>

          <%= link_to user, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-trash"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>