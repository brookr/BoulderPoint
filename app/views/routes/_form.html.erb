<%= simple_form_for @route, form_options do |f| %>
  <%= f.input :user_id, collection: current_account.users, selected: current_user %>
  <%= f.input :problem_id, collection: current_account.problems %>
  <%= f.input :notes, as: :text, input_html: { rows: 3 } %>

  <%= f.button :submit, class: "btn-success" %>
<% end %>