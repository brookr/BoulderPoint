<h1>Listing routes</h1>

<table>
  <tr>
    <th>User</th>
    <th>Problem</th>
    <th>Notes</th>
    <th>Day</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @routes.each do |route| %>
  <tr>
    <td><%= route.user.name %></td>
    <td><%= route.problem.name %></td>
    <td><%= route.notes %></td>
    <td><%= route.created_at.to_date.to_s(:short) %></td>
    <td><%= link_to 'Show', route %></td>
    <td><%= link_to 'Edit', edit_route_path(route) %></td>
    <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

